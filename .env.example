# Environment variables for OH4VNA
# Copy this file to .env and modify as needed

# Application settings
OH4VNA_DEBUG=false
OH4VNA_SIMULATION=true

# VNA connection
OH4VNA_VNA_ADDRESS=TCPIP::192.168.1.100::INSTR
OH4VNA_VNA_TIMEOUT=30000

# Data paths
OH4VNA_DATA_ROOT=./data
OH4VNA_TOUCHSTONE_DIR=./data/touchstone
OH4VNA_METADATA_DIR=./data/metadata

# Measurement defaults
OH4VNA_START_FREQ=1000000
OH4VNA_STOP_FREQ=6000000000
OH4VNA_POINTS=201
OH4VNA_IF_BW=1000
OH4VNA_POWER=-10

# Calibration
OH4VNA_CAL_KIT=Unknown